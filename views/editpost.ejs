<!-- editpost.ejs -->
<%-include('partials/header.ejs')%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Post
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form action="/api/v1/posts/update/<%=post._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="title" class="form-label fw-bold">Post Title</label>
                                <input type="text" class="form-control form-control-lg" name='title' id="title" placeholder="Enter an engaging title..." value="<%=post.title%>" required>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="description" class="form-label fw-bold">Description</label>
                                <textarea class="form-control" name='description' id="description" rows="6" placeholder="Write your post content here..." required><%=post.description%></textarea>
                            </div>
                            <div class="col-md-12 mb-4">
                                <label for="image" class="form-label fw-bold">Images</label>
                                <input multiple type="file" class="form-control" name='images' id="image" accept="image/*">
                                <div class="form-text">You can select multiple images (JPG, PNG, GIF)</div>
                            </div>
                        </div>
                        
                        <!-- Current Images -->
                        <% if(post.image && post.image.length > 0) { %>
                        <div class="mb-4">
                            <h5 class="fw-bold text-muted mb-3">Current Images:</h5>
                            <div class="row g-3">
                                <% post.image.forEach(image => { %>
                                <div class="col-md-4 col-sm-6">
                                    <div class="card border-0 shadow-sm">
                                        <img src="<%= image.url %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Post Image">
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <% } %>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-gradient btn-lg">
                                <i class="bi bi-check-circle me-1"></i>Update Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include('partials/footer.ejs')%>