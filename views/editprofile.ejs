<!-- editprofile.ejs -->
<%-include('partials/header.ejs')%>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-gear me-2"></i>Edit Profile
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form action="/api/v1/users/update" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="username" class="form-label fw-bold">
                                    <i class="bi bi-person me-1"></i>Username
                                </label>
                                <input type="text" class="form-control form-control-lg" id="username" name="username" value="<%= user.username %>" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label fw-bold">
                                    <i class="bi bi-envelope me-1"></i>Email
                                </label>
                                <input type="email" class="form-control form-control-lg" id="email" name="email" value="<%= user.email %>" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="pfp" class="form-label fw-bold">
                                <i class="bi bi-image me-1"></i>Profile Picture
                            </label>
                            <input type="file" class="form-control" id="pfp" name="pfp" accept="image/*">
                            <div class="form-text">Choose a new profile picture (JPG, PNG, GIF)</div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/api/v1/users/profile" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-gradient btn-lg">
                                <i class="bi bi-check-circle me-1"></i>Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include('partials/footer.ejs')%>