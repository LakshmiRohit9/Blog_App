<%- include('partials/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - MyApp</title>
    <!-- Bootstrap CSS (if not already included in header.ejs) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-dark">


    <!-- Info Cards Section -->
    <section class="container my-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow rounded-4 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-semibold">Create & Share</h5>
                        <p class="card-text">Post your thoughts, stories, or media with the world.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow rounded-4 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-semibold">Explore Categories</h5>
                        <p class="card-text">Dive into posts by topics that matter to you most.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow rounded-4 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-semibold">Engage & Comment</h5>
                        <p class="card-text">Join conversations and build a community.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Optional Welcome Back Message -->
    <% if (typeof username !== 'undefined') { %>
        <div class="text-center mb-5">
            <h4 class="text-muted">Welcome back, <%= username %>!</h4>
        </div>
    <% } %>

    <!-- Bootstrap JS (if not already included in footer.ejs) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include('partials/footer.ejs') %>
